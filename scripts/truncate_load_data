-- Loading Data into the table from csv file

--FIRST TRUNCATE THE TABLE

TRUNCATE TABLE bronze.crm_cust_info;

-- FULL LOAD
BULK INSERT bronze.crm_cust_info
FROM 'D:\DataWareHouse Project\source_crm\cust_info.csv'
WITH (
   FIRSTROW = 2,
   FIELDTERMINATOR = ',',
   TABLOCK 

);
GO

